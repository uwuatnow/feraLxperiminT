{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/mingw32/bin"
                }
            ],
            "program": "${workspaceFolder}/build/feraL_xperiminT.exe",
            "cwd": "${workspaceFolder}",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/mingw32/bin/gdb.exe",
            "targetArchitecture": "x86",
            "preLaunchTask": "compile",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable STL pretty printing",
                    "text": "set print pretty on",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable object printing",
                    "text": "set print object on",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
